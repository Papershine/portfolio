---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Hilary's Website</title>

    <!-- Metas -->
    <meta
      name="description"
      content="Hilary's personal portfolio website"
    />
  </head>
  <body class="dark:bg-gray-950">
    <div
      class="fixed top-0 left-0 size-full -z-10 blur-2xl background"
    />
    <Navbar />
    <main class="max-w-screen-lg mx-auto p-6 flex flex-col gap-12">
      <slot />
    </main>
    <Footer />
  </body>
  <style is:global>
    * {
      scroll-behavior: smooth;
    }
  </style>
</html>
